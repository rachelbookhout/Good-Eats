<h1><%=@restaurant.name %></h1>

<h5> <%= @restaurant.category %></h5>

<h5> <%= @restaurant.address %>, <%= @restaurant.city %>, <%=@restaurant.state %> <%=@restaurant.zipcode%> </h5>

<p><%= @restaurant.description %></p>


<h3> Reviews! </h3>

<p><%= link_to 'Add a new review', new_restaurant_review_path(@restaurant) %></p>

<% @reviews.each do |review| %>
<h5> Score: <%= review.rating %> </h5>
<p><%= review.body %></p>
<%end%>
